doctype html
html(class="no-js", lang=lang)
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    title= title
    meta(name="description", description=description)
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")
    link(href='http://diegoddox.github.io/react-redux-toastr/3.0.1/react-redux-toastr.min.css', rel='stylesheet', type='text/css')
    style#css!= css
  body
    #app!= body
    script#source(src=entry, data-initial-state=state)
    script.
      window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date;
      ga('create','#{trackingId}','auto');ga('send','pageview')
    if trackingId
      script(src="https://www.google-analytics.com/analytics.js", async=true, defer=true)
